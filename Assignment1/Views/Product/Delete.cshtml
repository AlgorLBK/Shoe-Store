@model Product
@{
    ViewData["Title"] = "Edit";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Angkor' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Arimo' rel='stylesheet'>
    <style>
        * {
            font-family: 'Arimo';
        }

        body {
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
        }

        h1 {
            text-align: center;
            margin: 30px;
            font-family: 'Angkor';
            font-size: 25px;
        }

        #moi {
            margin: auto;
        }

        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px 0px;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            justify-content: center;
        }

        label {
            display: block;
            margin: 10px 10%;
            font-size: 16px;
            font-weight: bold;
        }

        input[type="number"]{
            width: 80%;
            padding: 10px 0px;
            margin: 0 10%;
            border: none;
            background-color: #f2f2f2;
            border-radius: 5px;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
            font-size: 16px;
        }

        input[type="submit"] {
            display: block;
            margin: 20px auto 0;
            padding: 10px 20px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #3e8e41;
            }
    </style>
</head>
<body>
    <div id="moi">
        <h1>Please, enter the id of the product you want to delete.</h1>
        <form asp-action="Delete" method="post" enctype="multipart/form-data">

            <label asp-for="ProductID">Name:</label>
            <input asp-for="ProductID" type="number" id="code" name="code" required>

            <input type="submit" value="Submit">
        </form>
    </div>
    <footer>
        @Html.Partial("~/Views/Footer.cshtml");
    </footer>

</body>
</html>


