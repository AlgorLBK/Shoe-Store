@model Registration
@{
    ViewData["Title"] = "Register";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Angkor' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Arimo' rel='stylesheet'>

    <title>Product Form</title>
    <style>
        * {
            font-family: 'Arimo';
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
        }

        .moi {
            text-align: center;
            margin: 30px;
            font-family: 'Angkor';
            font-size: 25px;
        }

        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px 0px;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            justify-content: center;
        }

        label {
            display: block;
            margin: 10px 10%;
            font-size: 16px;
            font-weight: bold;
        }

        input[type="email"], input[type="password"], select {
            width: 80%;
            padding: 10px 0px;
            margin: 0 10%;
            border: none;
            background-color: #f2f2f2;
            border-radius: 5px;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
            font-size: 16px;
        }

        input[type="submit"] {
            display: block;
            margin: 20px auto 0;
            padding: 10px 20px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #3e8e41;
            }
    </style>
</head>
<body>
    <h1 class="moi">First time ? Please let us know your preferred Username and Password !</h1>
    <form asp-action="Register" method="post">
        <label asp-for="username">Username: </label>
        <input asp-for="username" type="email" name="username" id="username">

        <label asp-for="type">Please select your type:</label>
        <select asp-for="type" id="type" name="type" required>
            <option value="">Choose a type</option>
            <option value="Buyer">Buyer</option>
            <option value="Seller">Seller</option>
        </select>

        <label asp-for="password">Password: </label>
        <input asp-for="password" type="password" name="password" id="password">

        <input type="submit" value="Register">
    </form>
    <p class="moi">Already have an account ? Please <a asp-controller="Registration" asp-action="Login">login</a></p>

</body>
<footer>
    @Html.Partial("~/Views/Footer.cshtml");
</footer>
</html>